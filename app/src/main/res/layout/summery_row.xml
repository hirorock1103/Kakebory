<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    app:cardCornerRadius="2dp"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:text="今月は"
            style="@style/small_title_style_textonly"
            android:id="@+id/title1_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/category_name"
            style="@style/small_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/title1_comment"
            />

        <TextView
            android:text="に"
            style="@style/small_title_style_textonly"
            android:id="@+id/title2_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/category_name"
            />
        <!--app:layout_constraintLeft_toRightOf="@+id/price"-->
        <TextView
            android:id="@+id/price"
            style="@style/price_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/title2_comment"/>


        <TextView
            android:text="使いました。"
            android:id="@+id/title3_comment"
            style="@style/small_title_style_textonly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/price"
            />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>